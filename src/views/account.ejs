<div class="col-md-6 offset-md-3 order-0 order-sm-1">
    <div class="text-center pb-4 pt-4">
        <img src="/img/logo.png" width="60" alt="THX Logo" />
    </div>
    <div class="card shadow-sm mb-5 w-100">
        <div class="card-body p-sm-5">
            <strong class="h3 d-block text-dark text-center mb-5">
                Account
            </strong>
            <% if (alert && alert.message) { %>
            <div class="alert alert-<%= alert.variant %>">
                <%= alert.message %>
            </div>
            <% } %>

            <form id="account_update" autocomplete="off" action="/oidc/<%= uid %>/account" method="POST">
                <div class=" row pb-3">
                    <div class="d-flex col-4 align-items-center font-weight-bold">
                        Email:
                    </div>
                    <div class="col-8">
                        <input class="form-control" name="email" required disabled value="<%= params.email %>"
                               placeholder="" />
                    </div>
                </div>

                <div class="row pb-3">
                    <div class="d-flex col-4 align-items-center font-weight-bold">
                        Address:
                    </div>

                    <div class="col-8">
                        <input class="form-control" disabled required value="<%= params.address %>" />
                    </div>
                </div>

                <div class="row pb-3">
                    <div class="d-flex col-4 align-items-center font-weight-bold">
                        First name:
                    </div>
                    <div class="col-8">
                        <input class="form-control" name="firstName" value="<%= params.firstName %>" placeholder="" />
                    </div>
                </div>

                <div class="row pb-3">
                    <div class="d-flex col-4 align-items-center font-weight-bold">
                        Last name:
                    </div>
                    <div class="col-8">
                        <input class="form-control" name="lastName" value="<%= params.lastName %>" placeholder="" />
                    </div>
                </div>

                <div class="row pb-3">
                    <div class="d-flex col-4 align-items-center font-weight-bold">
                        Organisation:
                    </div>
                    <div class="col-8">
                        <input class="form-control" name="organisation" value="<%= params.organisation %>"
                               placeholder="" />
                    </div>
                </div>

                <% if (params.googleAccess) { %>
                    <input form="account_update" type="hidden" name="googleAccess" value="false" />
                <% } %>

                <% if (params.twitterAccess) { %>
                    <input form="account_update" type="hidden" name="twitterAccess" value="false" />
                <% } %>

                <% if (params.spotifyAccess) { %>
                    <input form="account_update" type="hidden" name="spotifyAccess" value="false" />
                <% } %>


                <div class="row pb-3">
                    <div class="d-flex col-4 align-items-center font-weight-bold">
                        Plan:
                    </div>
                    <div class="col-8">
                        <select name="plan" class="form-control" disabled>
                            <option <%=params.plan == 0 ? 'selected' : '' %> value="0">Free</option>
                            <option <%=params.plan == 1 ? 'selected' : '' %> value="1">Basic</option>
                            <option <%=params.plan == 2 ? 'selected' : '' %> value="2">Premium</option>
                        </select>
                    </div>
                </div>

                <input type="hidden" name="return_url" value="<%= params.return_url %>" />
            </form>

            <div class="row pb-3">
                <div class="d-flex col-4 align-items-center font-weight-bold">
                    MFA Status:
                </div>
                <div class="col-8">
                    <% if (params.otpSecret) { %>
                    <form autocomplete="off" action="/oidc/<%= uid %>/account/totp" method="POST">
                        <button class="btn btn-light text-danger btn-block">Deactivate</button>
                        <input type="hidden" name="disable" value="true" />
                    </form>
                    <% } %>
                    <% if (!params.otpSecret) { %>
                    <form autocomplete="off" action="/oidc/<%= uid %>/account/totp" method="POST">
                        <button type="submit" class="btn btn-light text-primary btn-block">Activate</button>
                    </form>
                    <% } %>
                </div>
            </div>

            <div class="row">
                <div class="d-flex col-4 align-items-start font-weight-bold">
                    Connect with
                </div>

                <div class="d-flex col-8">
                <!--
                This part is used for regular login flow and only visibile if links are available
                -->
                    <div class="w-100 d-flex flex-column">
                        <% if (params.googleLoginUrl && !params.googleAccess) { %>
                        <a class="btn btn-sign-in btn-google btn-block" href="<%= params.googleLoginUrl %>" download>
                            <div class="logo">
                                <img src="/img/g-logo.png" alt="Google logo" />
                            </div>
                            <div class="label">Sign in with Google</div>
                        </a>
                        <% } %>
                        <% if (params.googleAccess) { %>
                        <button form="account_update" class="btn btn-sign-in btn-google bg-gray btn-block" type="submit">
                            <div class="logo">
                                <img src="/img/g-logo.png" alt="Google logo" />
                            </div>
                            <div class="label">Disconnect with Google</div>
                        </button>
                        <% } %>
                        <% if (params.twitterLoginUrl && !params.twitterAccess) { %>
                        <a class="btn btn-sign-in btn-twitter btn-block" href="<%= params.twitterLoginUrl %>">
                            <div class="logo">
                                <img src="/img/t-logo.png" alt="Twitter logo" />
                            </div>
                            <div class="label">Sign in with Twitter</div>
                        </a>
                        <% } %>
                        <% if (params.twitterAccess) { %>
                        <button form="account_update" class="btn btn-sign-in bg-gray btn-twitter btn-block" type="submit">
                            <div class="logo">
                                <img src="/img/t-logo.png" alt="Twitter logo" />
                            </div>
                            <div class="label">Disconnect with Twitter</div>
                        </button>       
                        <% } %>
                        <% if (params.spotifyLoginUrl && !params.spotifyAccess) { %>
                        <a class="btn btn-sign-in btn-twitter btn-block" href="<%= params.spotifyLoginUrl %>">
                            <div class="logo">
                                <img src="/img/s-logo.png" alt="Spotify logo" />
                            </div>
                            <div class="label">Sign in with Spotify</div>
                        </a>
                        <% } %>
                        <% if (params.spotifyAccess) { %>
                        <button form="account_update" class="btn btn-sign-in bg-gray btn-twitter btn-block" type="submit">
                            <div class="logo">
                                <img src="/img/s-logo.png" alt="Spotify logo" />
                            </div>
                            <div class="label">Disconnect with Spotify</div>
                        </button>
                        <% } %>
                <!--
                        This part is used for regular login flow
                    -->
                    </div>
                </div>
            </div>

            <hr>
            <button class="mt-5 btn btn-primary btn-block rounded-pill" type="submit" form="account_update">Update
                Infomation</button>
            <a class="btn btn-link btn-block rounded-pill" href="<%= params.return_url %>">
                Return to application</a>
        </div>
    </div>
</div>