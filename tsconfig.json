{
    "compilerOptions": {
        "lib": ["ES2021"],
        "module": "commonjs",
        "target": "ES2021",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true,
        "allowJs": true,
        "paths": {
            "@/*": ["./src/*"],
            "*": ["./src/*", "./node_modules/*", "src/types/*"]
        }
    },
    "include": ["./src/*", "./src/migrations/*"]
}
