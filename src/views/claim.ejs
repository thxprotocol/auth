<div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 order-0 order-sm-1">
    <div class="text-center pb-4 pt-4">
        <img src="/img/logo.png" width="60" alt="THX Logo" />
    </div>
    <div class="card shadow-sm mb-5">
        <div class="card-body pt-sm-5 px-sm-5 pb-md-4">
            <% if (alert && alert.message) { %>
                <div class="alert alert-<%= alert.variant %>">
                    <%= alert.message %>
                </div>
                <% } %>

                    <form autocomplete="off" action="/oidc/<%= uid %>/login" method="post" class="mb-4">
                        <strong class="h2 d-block text-dark text-center mb-4">
                            Claim <%= params.rewardData.rewardAmount %>
                                <%= params.rewardData.tokenSymbol %>
                        </strong>
                        <p>
                            Make sure to grant the <strong class="text-primary">"Manage YouTube account"</strong>
                            permission during authorization, so we can verify if you
                            <% if (params.channelAction.toLowerCase()=='like' ) { %>
                                <a target="_blank" href="https://www.youtube.com/watch?v=<%= params.channelItem %>"
                                   class="font-weight-bold">liked this video</a>
                                <% } %>
                                    <% if (params.channelAction.toLowerCase()=='subscribe' ) { %>
                                        <a target="_blank"
                                           href="https://www.youtube.com/channel/<%= params.channelItem %>"
                                           class="font-weight-bold">subscribed
                                            to this channel</a>.
                                        <% } %>
                        </p>
                        <input type="hidden" name="returnUrl" value="<%= params.return_url %>" />
                        <input type="hidden" name="rewardHash" value="<%= params.reward_hash %>" />
                        <a class="btn rounded-pill btn-primary btn-block" href="<%= params.googleLoginUrl %>">
                            Sign in with Google
                            <i class="fas fa-chevron-right" aria-hidden="true"></i>
                        </a>
                        <a class="btn btn-link btn-block" href="https://myaccount.google.com/permissions"
                           target="_blank">
                            Manage Google permissions
                        </a>
                    </form>

        </div>
    </div>
</div>