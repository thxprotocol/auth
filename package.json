{
    "name": "@thxnetwork/auth",
    "version": "1.4.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/thxprotocol/api"
    },
    "author": "Peter Polman",
    "license": "AGPL-3.0",
    "scripts": {
        "lint": "npx eslint \"src/**/*.ts\"",
        "lint:fix": "npx eslint \"src/**/*.ts\" --fix",
        "dev": "docker-compose up -d && npm run watch:debug",
        "build": "npm run build:sass && npm run build:assets && tsc",
        "build:assets": "mkdir -p dist/src/public && cp -R src/public/* dist/src/public/. && cp -R src/views dist/src/.",
        "airtable:migrate": "ts-node-dev scripts/airtableMigrate.ts",
        "build:sass": "sass src/main.scss src/public/main.css",
        "build:keys": "node ./scripts/generateKeys.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch:sass\" \"npm run watch:node\"",
        "watch:debug": "concurrently -k -p \"[{name}]\" -n \"Sass,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch:sass\" \"npm run watch:node-debug\"",
        "watch:sass": "sass --watch src/main.scss src/public/main.css",
        "watch:node": "ts-node-dev src/server.ts",
        "watch:node-debug": "ts-node-dev --inspect=7030 src/server.ts",
        "test": "npx jest --runInBand",
        "test:coverage": "npx jest --coverage --runInBand",
        "migrate": "migrate-mongo up -f src/migrate-mongo-config.js",
        "migrate:create": "sh -c 'migrate-mongo create -f src/migrate-mongo-config.js $0'",
        "migrate:status": "migrate-mongo status -f src/migrate-mongo-config.js",
        "migrate:down": "migrate-mongo down -f src/migrate-mongo-config.js && npm run migrate:status"
    },
    "dependencies": {
        "@godaddy/terminus": "^4.10.2",
        "@sendgrid/mail": "^7.4.2",
        "airtable": "^0.11.2",
        "axios": "^0.21.3",
        "axios-better-stacktrace": "^2.1.2",
        "bcrypt-nodejs": "^0.0.3",
        "bluebird": "^3.5.5",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "ejs": "^3.1.6",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "express-ejs-layouts": "^2.5.1",
        "express-jwt": "^6.1.0",
        "express-jwt-authz": "^2.4.1",
        "express-rate-limit": "^5.3.0",
        "express-validator": "^6.13.0",
        "form-data": "^4.0.0",
        "googleapis": "^91.0.0",
        "helmet": "^4.6.0",
        "jose": "^2.0.5",
        "jwks-rsa": "^2.0.5",
        "lodash": "^4.17.21",
        "lusca": "^1.6.1",
        "migrate-mongo": "^8.2.3",
        "mongodb": "^4.3.1",
        "mongoose": "^6.2.1",
        "morgan": "^1.10.0",
        "morgan-json": "^1.1.0",
        "newrelic": "^8.9.0",
        "oidc-provider": "^6.31.1",
        "otplib": "^12.0.1",
        "qrcode": "^1.5.0",
        "web3": "^1.5.1",
        "winston": "^3.2.1",
        "y18n": "^5.0.8"
    },
    "devDependencies": {
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/bluebird": "^3.5.27",
        "@types/body-parser": "^1.17.1",
        "@types/compression": "^1.0.1",
        "@types/concurrently": "^4.1.0",
        "@types/ejs": "^3.1.0",
        "@types/eslint": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/express-ejs-layouts": "^2.5.0",
        "@types/express-rate-limit": "^5.1.3",
        "@types/jest": "^27.4.0",
        "@types/lodash": "^4.14.178",
        "@types/lusca": "^1.6.1",
        "@types/migrate-mongo": "^8.1.3",
        "@types/mongoose": "^5.5.18",
        "@types/newrelic": "^7.0.3",
        "@types/node": "^15.6.1",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "bootstrap": "^4.6.0",
        "concurrently": "^7.0.0",
        "eslint": "^8.9.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.5.1",
        "nock": "^13.2.2",
        "nodemon": "^2.0.15",
        "prettier": "^2.2.1",
        "sass": "^1.32.8",
        "supertest": "^6.1.1",
        "swagger-jsdoc": "^4.2.0",
        "swagger-ui-express": "^4.1.4",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.5.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.5.5"
    },
    "engines": {
        "npm": ">=8.0.0",
        "node": ">=16.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "bracketSpacing": true,
        "printWidth": 120,
        "trailingComma": "all",
        "quoteProps": "consistent"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "root": true,
        "env": {
            "node": true,
            "mocha": true,
            "shelljs": true,
            "jest": true,
            "es6": true,
            "amd": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },
        "rules": {
            "semi": [
                "error",
                "always"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "no-debugger": "off",
            "no-sparse-arrays": "off",
            "@typescript-eslint/explicit-function-return-type": "off",
            "@typescript-eslint/no-unused-vars": "warn",
            "@typescript-eslint/camelcase": "off",
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/interface-name-prefix": "off"
        },
        "ignorePatterns": [
            "dist/*",
            "src/types/",
            "**/*.d.ts",
            "node_modules"
        ]
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.json"
            }
        },
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "<rootDir>/src/**/*.test.(ts|js)"
        ],
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "<rootDir>/src/util/jest/setup.ts"
        ]
    }
}
