{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true,
        "allowJs": true,
        "paths": {
            "*": ["./src/*", "node_modules/*", "src/types/*"]
        }
    },
    "include": ["./src/*", "./src/migrations/*"]
}
