<div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 order-0 order-sm-1">
    <div class="text-center pb-4 pt-4">
        <img src="/img/logo.png" width="60" alt="THX Logo" />
    </div>
    <div class="card shadow-sm mb-5">
        <div class="card-body p-sm-5">
            <% if (locals.alert && alert.message) { %>
                <div class="alert alert-<%= alert.variant %>">
                    <%= alert.message %>
                </div>
                <% } %>

                    <div class="container-fluid">

                        <div class="row pb-3">
                            <div class="d-flex col-4 align-items-center font-weight-bold">
                                Email:
                            </div>
                            <div class="col-8">
                                <input class="form-control" name="email" required value="<%= params.email %>" placeholder="Please input your email here" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="d-flex col-4 align-items-center font-weight-bold">
                                MFA Status:
                            </div>
                            <div class="col-8">
                                <% if (params.mfaEnable) { %>
                                <form autocomplete="off" action="/oidc/<%= uid %>/totp-setup" method="post">
                                    <button class="btn rounded-pill btn-primary btn-block">Activated</button>
                                    <input type="hidden" name="otpSecret" value="<%= params.otpSecret %>" />
                                    <input type="hidden" name="disable" value="true" />
                                    <input type="hidden" name="uid" value="<%= uid %>" />

                                </form>
                                <% } %>
                                <% if (!params.mfaEnable) { %>
                                <form autocomplete="off" action="/oidc/<%= uid %>/totp-setup" method="post">
                                    <button type="submit" class="btn rounded-pill btn-gray btn-block">Click to Activate</button>
                                    <input type="hidden" name="otpSecret" value="<%= params.otpSecret %>" />
                                    <input type="hidden" name="uid" value="<%= uid %>" />

                                </form>
                                <% } %>

                            </div>
                        </div>
                    </div>
        </div>
    </div>
</div>